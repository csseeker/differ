<?xml version="1.0" encoding="utf-8"?>
<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities"
  xmlns:mp="http://schemas.microsoft.com/appx/2014/phone/manifest"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  IgnorableNamespaces="uap rescap mp">
  <Identity
    Name="{{PackageName}}"
    ProcessorArchitecture="{{Architecture}}"
    Publisher="{{Publisher}}"
    Version="{{Version}}" />

  <Properties>
    <DisplayName>{{DisplayName}}</DisplayName>
    <PublisherDisplayName>{{PublisherDisplayName}}</PublisherDisplayName>
    <Logo>Assets\\StoreLogo.png</Logo>
  </Properties>

  <Resources>
    <Resource Language="en-us" />
  </Resources>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.19041.0" MaxVersionTested="10.0.19041.0" />
  </Dependencies>

  <Applications>
    <Application Id="{{ApplicationId}}" Executable="{{Executable}}" EntryPoint="Windows.FullTrustApplication">
      <uap:VisualElements
        DisplayName="{{DisplayName}}"
        Description="{{Description}}"
        BackgroundColor="transparent"
        Square150x150Logo="Assets\\Square150x150Logo.png"
        Square44x44Logo="Assets\\Square44x44Logo.png">
        <uap:DefaultTile Wide310x150Logo="Assets\\Wide310x150Logo.png" />
      </uap:VisualElements>
      <Extensions>
        <uap:Extension Category="windows.appExecutionAlias">
          <uap3:AppExecutionAlias xmlns:uap3="http://schemas.microsoft.com/appx/manifest/uap/windows10/3">
            <uap3:ExecutionAlias Alias="Differ" />
          </uap3:AppExecutionAlias>
        </uap:Extension>
      </Extensions>
    </Application>
  </Applications>
</Package>

<Window x:Class="Differ.UI.Views.FileDiffWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Differ.UI.Converters"
        xmlns:models="clr-namespace:Differ.UI.Models"
    xmlns:syswin="clr-namespace:System.Windows;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="650"
        Width="1000"
        MinHeight="450"
        MinWidth="720">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Differ.UI;component/Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:LineChangeKindToBrushConverter x:Key="LineChangeKindToBrushConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:WhitespaceDisplayConverter x:Key="WhitespaceDisplayConverter" />
            <Style TargetType="ListViewItem">
                <Setter Property="Padding" Value="0" />
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                <Setter Property="Background" Value="{Binding ChangeKind, Converter={StaticResource LineChangeKindToBrushConverter}}" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel>
        <Border DockPanel.Dock="Top" Padding="10" Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <TextBlock Text="Diffing" FontWeight="Bold" />
                    <Grid Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{Binding ElementName=LeftContentColumn, Path=ActualWidth, Mode=OneWay}" />
                            <ColumnDefinition Width="{Binding ElementName=SplitterColumn, Path=ActualWidth, Mode=OneWay}" />
                            <ColumnDefinition Width="{Binding ElementName=RightContentColumn, Path=ActualWidth, Mode=OneWay}" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Orientation="Vertical">
                            <TextBlock Text="Left"
                                       FontSize="12"
                                       Foreground="#6B7280" />
                            <TextBlock Text="{Binding LeftFileName}"
                                       FontWeight="SemiBold"
                                       FontSize="16"
                                       TextTrimming="CharacterEllipsis"
                                       ToolTipService.ToolTip="{Binding LeftFileName}" />
                            <TextBlock Text="{Binding LeftFilePath}"
                                       FontSize="12"
                                       Foreground="#6B7280"
                                       TextTrimming="CharacterEllipsis"
                                       ToolTipService.ToolTip="{Binding LeftFilePath}" />
                        </StackPanel>

            <Border Grid.Column="1"
                Background="Transparent"
                Width="{Binding ElementName=SplitterColumn, Path=ActualWidth, Mode=OneWay}" />

            <StackPanel Grid.Column="2" Orientation="Vertical">
                            <TextBlock Text="Right"
                                       FontSize="12"
                                       Foreground="#6B7280" />
                            <TextBlock Text="{Binding RightFileName}"
                                       FontWeight="SemiBold"
                                       FontSize="16"
                                       TextTrimming="CharacterEllipsis"
                                       ToolTipService.ToolTip="{Binding RightFileName}" />
                            <TextBlock Text="{Binding RightFilePath}"
                                       FontSize="12"
                                       Foreground="#6B7280"
                                       TextTrimming="CharacterEllipsis"
                                       ToolTipService.ToolTip="{Binding RightFilePath}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <CheckBox Grid.Column="1"
                          Margin="20,0,0,0"
                          Content="Ignore whitespace"
                          IsChecked="{Binding IgnoreWhitespace}"
                          VerticalAlignment="Center" />

                <CheckBox Grid.Column="2"
                          Margin="12,0,0,0"
                          Content="Ignore case"
                          IsChecked="{Binding IgnoreCase}"
                          VerticalAlignment="Center" />

                <CheckBox Grid.Column="3"
                          Margin="12,0,0,0"
                          Content="Show invisible chars"
                          IsChecked="{Binding ShowWhitespaceCharacters}"
                          VerticalAlignment="Center" />

        <Button Grid.Column="4"
            Margin="20,0,0,0"
            Content="Refresh"
            Command="{Binding ReloadCommand}"
            VerticalAlignment="Center"
            Height="{x:Static syswin:SystemParameters.CaptionHeight}" />
            </Grid>
        </Border>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="220"
                             Height="16"
                             Minimum="0"
                             Maximum="1"
                             Value="{Binding ProgressValue}"
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StatusBarItem>
        </StatusBar>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Margin="10"
                  IsSharedSizeScope="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="LeftContentColumn"
                                      Width="*"
                                      MinWidth="150" />
                    <ColumnDefinition x:Name="SplitterColumn"
                                      Width="Auto" />
                    <ColumnDefinition x:Name="RightContentColumn"
                                      Width="*"
                                      MinWidth="150" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="4"
                        Background="White">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="#F6F7FB"
                                BorderBrush="#E5E7EB"
                                BorderThickness="0,0,0,1"
                                CornerRadius="4,4,0,0">
                <StackPanel Margin="12,10"
                    Orientation="Vertical">
                                <TextBlock Text="Left file"
                                           FontWeight="SemiBold"
                                           Foreground="#1F2937" />
                                <TextBlock Text="{Binding LeftFilePath}"
                                           FontSize="12"
                                           Foreground="#6B7280"
                       TextWrapping="Wrap"
                       Margin="0,4,0,0"
                                           ToolTipService.ToolTip="{Binding LeftFilePath}" />
                            </StackPanel>
                        </Border>

                        <ListView x:Name="LeftDiffList"
                                  Grid.Row="1"
                                  ItemsSource="{Binding DiffLines}"
                                  Margin="0"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  Loaded="LeftDiffList_Loaded"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                                  VirtualizingPanel.ScrollUnit="Item"
                                  ScrollViewer.CanContentScroll="True"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto">
                            <ListView.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:DiffDisplayLine}">
                                    <Border Padding="4,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60" SharedSizeGroup="LineNumber" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding LeftLineNumberDisplay}"
                                                       Margin="0,0,8,0"
                                                       HorizontalAlignment="Right"
                                                       FontFamily="Consolas"
                                                       Foreground="Gray" />

                                            <TextBlock Grid.Column="1"
                                                       FontFamily="Consolas"
                                                       TextWrapping="NoWrap"
                                                       TextTrimming="CharacterEllipsis">
                                                <TextBlock.Text>
                                                    <MultiBinding Converter="{StaticResource WhitespaceDisplayConverter}">
                                                        <Binding Path="LeftText" />
                                                        <Binding Path="DataContext.ShowWhitespaceCharacters" RelativeSource="{RelativeSource AncestorType=Window}" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>

                <GridSplitter Grid.Column="1"
                              Width="6"
                              Margin="4,0"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Stretch"
                              Background="#D1D5DB"
                              ShowsPreview="False" />

                <Border Grid.Column="2"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="4"
                        Background="White">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="#F6F7FB"
                                BorderBrush="#E5E7EB"
                                BorderThickness="0,0,0,1"
                                CornerRadius="4,4,0,0">
                <StackPanel Margin="12,10"
                    Orientation="Vertical">
                                <TextBlock Text="Right file"
                                           FontWeight="SemiBold"
                                           Foreground="#1F2937" />
                                <TextBlock Text="{Binding RightFilePath}"
                                           FontSize="12"
                                           Foreground="#6B7280"
                       TextWrapping="Wrap"
                       Margin="0,4,0,0"
                                           ToolTipService.ToolTip="{Binding RightFilePath}" />
                            </StackPanel>
                        </Border>

                        <ListView x:Name="RightDiffList"
                                  Grid.Row="1"
                                  ItemsSource="{Binding DiffLines}"
                                  Margin="0"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  Loaded="RightDiffList_Loaded"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                                  VirtualizingPanel.ScrollUnit="Item"
                                  ScrollViewer.CanContentScroll="True"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto">
                            <ListView.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:DiffDisplayLine}">
                                    <Border Padding="4,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60" SharedSizeGroup="LineNumber" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding RightLineNumberDisplay}"
                                                       Margin="0,0,8,0"
                                                       HorizontalAlignment="Right"
                                                       FontFamily="Consolas"
                                                       Foreground="Gray" />

                                            <TextBlock Grid.Column="1"
                                                       FontFamily="Consolas"
                                                       TextWrapping="NoWrap"
                                                       TextTrimming="CharacterEllipsis">
                                                <TextBlock.Text>
                                                    <MultiBinding Converter="{StaticResource WhitespaceDisplayConverter}">
                                                        <Binding Path="RightText" />
                                                        <Binding Path="DataContext.ShowWhitespaceCharacters" RelativeSource="{RelativeSource AncestorType=Window}" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="1"
                    Margin="10"
                    Padding="10"
                    Background="#F3F4F6"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="4"
                    Visibility="{Binding SummaryText, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock Text="{Binding SummaryText}" />
            </Border>
        </Grid>
    </DockPanel>
</Window>

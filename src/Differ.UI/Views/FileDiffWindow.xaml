<Window x:Class="Differ.UI.Views.FileDiffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Differ.UI.Converters"
        xmlns:models="clr-namespace:Differ.UI.Models"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="650"
        Width="1000"
        MinHeight="450"
        MinWidth="720">
    <Window.Resources>
        <converters:LineChangeKindToBrushConverter x:Key="LineChangeKindToBrushConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:WhitespaceDisplayConverter x:Key="WhitespaceDisplayConverter" />
        <Style TargetType="ListViewItem">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="{Binding ChangeKind, Converter={StaticResource LineChangeKindToBrushConverter}}" />
        </Style>
    </Window.Resources>

    <DockPanel>
        <Border DockPanel.Dock="Top" Padding="10" Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <TextBlock Text="Diffing" FontWeight="Bold" />
                    <TextBlock Text="{Binding LeftFileName}" />
                    <TextBlock Text="{Binding RightFileName}" />
                </StackPanel>

                <CheckBox Grid.Column="1"
                          Margin="20,0,0,0"
                          Content="Ignore whitespace"
                          IsChecked="{Binding IgnoreWhitespace}" />

                <CheckBox Grid.Column="2"
                          Margin="12,0,0,0"
                          Content="Ignore case"
                          IsChecked="{Binding IgnoreCase}" />

                <CheckBox Grid.Column="3"
                          Margin="12,0,0,0"
                          Content="Show whitespace"
                          IsChecked="{Binding ShowWhitespaceCharacters}" />

                <Button Grid.Column="4"
                        Margin="20,0,0,0"
                        Content="Refresh"
                        Command="{Binding ReloadCommand}" />
            </Grid>
        </Border>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="220"
                             Height="16"
                             Minimum="0"
                             Maximum="1"
                             Value="{Binding ProgressValue}"
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StatusBarItem>
        </StatusBar>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListView Grid.Row="0"
                      ItemsSource="{Binding DiffLines}"
                      Margin="10"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                      VirtualizingPanel.ScrollUnit="Item"
                      ScrollViewer.CanContentScroll="True"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <ListView.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:DiffDisplayLine}">
                        <Border Background="{Binding ChangeKind, Converter={StaticResource LineChangeKindToBrushConverter}}"
                                Padding="4,2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{Binding LeftLineNumberDisplay}"
                                           Margin="0,0,8,0"
                                           HorizontalAlignment="Right"
                                           FontFamily="Consolas"
                                           Foreground="Gray" />

                                <TextBlock Grid.Column="1"
                                           Margin="0,0,8,0"
                                           FontFamily="Consolas"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis">
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource WhitespaceDisplayConverter}">
                                            <Binding Path="LeftText" />
                                            <Binding Path="DataContext.ShowWhitespaceCharacters" RelativeSource="{RelativeSource AncestorType=Window}" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <TextBlock Grid.Column="2"
                                           Text="{Binding RightLineNumberDisplay}"
                                           Margin="0,0,8,0"
                                           HorizontalAlignment="Right"
                                           FontFamily="Consolas"
                                           Foreground="Gray" />

                                <TextBlock Grid.Column="3"
                                           FontFamily="Consolas"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis">
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource WhitespaceDisplayConverter}">
                                            <Binding Path="RightText" />
                                            <Binding Path="DataContext.ShowWhitespaceCharacters" RelativeSource="{RelativeSource AncestorType=Window}" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Border Grid.Row="1"
                    Margin="10"
                    Padding="10"
                    Background="#F3F4F6"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="4"
                    Visibility="{Binding SummaryText, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock Text="{Binding SummaryText}" />
            </Border>
        </Grid>
    </DockPanel>
</Window>

<Window x:Class="Differ.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:Differ.UI.Converters"
        Title="Directory Differ" 
        Height="600" 
        Width="1000"
        MinHeight="400"
        MinWidth="600">
    
    <Window.Resources>
        <converters:ComparisonStatusToColorConverter x:Key="StatusToColorConverter" />
        <converters:ComparisonStatusToTextConverter x:Key="StatusToTextConverter" />
        <converters:FileSizeConverter x:Key="FileSizeConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:ItemTypeConverter x:Key="ItemTypeConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Directory Selection -->
        <GroupBox Grid.Row="0" Header="Directory Selection" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Directory -->
                <Label Grid.Row="0" Grid.Column="0" Content="Left Directory:"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding LeftDirectoryPath, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Grid.Row="0" Grid.Column="2" Content="Browse..." Command="{Binding BrowseLeftDirectoryCommand}"/>

                <!-- Right Directory -->
                <Label Grid.Row="1" Grid.Column="0" Content="Right Directory:"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RightDirectoryPath, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Grid.Row="1" Grid.Column="2" Content="Browse..." Command="{Binding BrowseRightDirectoryCommand}"/>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Compare Directories" 
                            Command="{Binding CompareDirectoriesCommand}"
                            IsEnabled="{Binding CanCompare}"/>
                    <Button Content="Cancel" 
                            Command="{Binding CancelComparisonCommand}"
                            IsEnabled="{Binding IsComparing}"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Summary -->
        <GroupBox Grid.Row="1" Header="Comparison Summary" Margin="10" Visibility="{Binding ComparisonSummary, Converter={StaticResource NullToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="10,5">
                    <Label Content="Total Items" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <Label Content="{Binding ComparisonSummary.TotalItems}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,5">
                    <Label Content="Identical" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Green"/>
                    <Label Content="{Binding ComparisonSummary.IdenticalItems}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="10,5">
                    <Label Content="Different" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Red"/>
                    <Label Content="{Binding ComparisonSummary.DifferentItems}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Margin="10,5">
                    <Label Content="Left Only" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Blue"/>
                    <Label Content="{Binding ComparisonSummary.LeftOnlyItems}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="4" Margin="10,5">
                    <Label Content="Right Only" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Orange"/>
                    <Label Content="{Binding ComparisonSummary.RightOnlyItems}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="5" Margin="10,5">
                    <Label Content="Errors" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Purple"/>
                    <Label Content="{Binding ComparisonSummary.ErrorItems}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Results -->
        <GroupBox Grid.Row="2" Header="Comparison Results" Margin="10">
            <DataGrid ItemsSource="{Binding ComparisonItems}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      AlternatingRowBackground="LightGray"
                      SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Status" 
                                        Binding="{Binding Status, Converter={StaticResource StatusToTextConverter}}"
                                        Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Background" Value="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Path" 
                                        Binding="{Binding RelativePath}"
                                        Width="*"/>
                    
                    <DataGridTextColumn Header="Type" Width="60">
                        <DataGridTextColumn.Binding>
                            <MultiBinding Converter="{StaticResource ItemTypeConverter}">
                                <Binding Path="LeftItem"/>
                                <Binding Path="RightItem"/>
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Left Size" 
                                        Binding="{Binding LeftItem.Size, Converter={StaticResource FileSizeConverter}}"
                                        Width="80"/>
                    
                    <DataGridTextColumn Header="Right Size" 
                                        Binding="{Binding RightItem.Size, Converter={StaticResource FileSizeConverter}}"
                                        Width="80"/>
                    
                    <DataGridTextColumn Header="Error" 
                                        Binding="{Binding ErrorMessage}"
                                        Width="200"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="200" 
                             Height="16" 
                             IsIndeterminate="{Binding IsComparing}"
                             Visibility="{Binding IsComparing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
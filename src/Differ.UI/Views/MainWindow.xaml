<Window x:Class="Differ.UI.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:Differ.UI.Converters"
        xmlns:models="clr-namespace:Differ.UI.Models"
        Title="Directory Differ" 
        Height="600" 
        Width="1000"
        MinHeight="400"
        MinWidth="600">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Differ.UI;component/Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:ComparisonStatusToColorConverter x:Key="StatusToColorConverter" />
            <converters:ComparisonStatusToTextConverter x:Key="StatusToTextConverter" />
            <converters:FileSizeConverter x:Key="FileSizeConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <converters:ItemTypeConverter x:Key="ItemTypeConverter" />
            <converters:SummaryToFilterButtonsConverter x:Key="SummaryToFilterButtonsConverter" />
            <converters:ComparisonItemCanDiffConverter x:Key="ComparisonItemCanDiffConverter" />
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

            <HierarchicalDataTemplate DataType="{x:Type models:UITreeViewItem}" ItemsSource="{Binding Children}">
                <TextBlock Text="{Binding Name}" />
            </HierarchicalDataTemplate>
            
            <Style TargetType="TextBox">
                <Setter Property="Padding" Value="5"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>
            
            <Style TargetType="Label">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <Style TargetType="TreeViewItem">
                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Directory Selection -->
        <GroupBox Grid.Row="0" Header="Directory Selection" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Directory -->
                <Label Grid.Row="0" Grid.Column="0" Content="Left Directory:"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding LeftDirectoryPath, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Grid.Row="0" Grid.Column="2" Content="Browse" Command="{Binding BrowseLeftDirectoryCommand}"/>

                <!-- Right Directory -->
                <Label Grid.Row="1" Grid.Column="0" Content="Right Directory:"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RightDirectoryPath, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Grid.Row="1" Grid.Column="2" Content="Browse" Command="{Binding BrowseRightDirectoryCommand}"/>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
            <Button Content="Compare Directories"
                Command="{Binding CompareDirectoriesCommand}"
                IsEnabled="{Binding CanCompare}"
                MinWidth="150"
                Margin="5,0"/>
            <Button Content="Cancel"
                Command="{Binding CancelComparisonCommand}"
                IsEnabled="{Binding IsComparing}"
                Margin="5,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Summary -->
        <GroupBox Grid.Row="1" Header="Comparison Summary" Margin="10" Visibility="{Binding ComparisonSummary, Converter={StaticResource NullToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding ComparisonSummary, Converter={StaticResource SummaryToFilterButtonsConverter}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding DataContext.FilterItemsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding Category}">
                            <StackPanel>
                                <TextBlock Text="{Binding Label}" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{Binding Color}"/>
                                <TextBlock Text="{Binding Count}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </GroupBox>

        <!-- Panes -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- File Panes -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <GroupBox Header="Left Directory" Margin="10,0,5,0">
                    <TreeView x:Name="LeftTreeView" ItemsSource="{Binding LeftDirectoryTree}" ScrollViewer.ScrollChanged="TreeView_ScrollChanged"/>
                </GroupBox>

                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

                <GroupBox Grid.Column="2" Header="Right Directory" Margin="5,0,10,0">
                    <TreeView x:Name="RightTreeView" ItemsSource="{Binding RightDirectoryTree}" ScrollViewer.ScrollChanged="TreeView_ScrollChanged"/>
                </GroupBox>
            </Grid>

            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

            <!-- Results Pane -->
            <GroupBox Grid.Row="2" Header="Comparison Results" Margin="10,0,10,10">
                <DataGrid ItemsSource="{Binding FilteredComparisonItems}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="LightGray"
                          SelectionMode="Single">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}" />
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu>
                                        <MenuItem Header="Compare"
                                                  Command="{Binding PlacementTarget.Tag.OpenDiffCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                  IsEnabled="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}, Converter={StaticResource ComparisonItemCanDiffConverter}}" />
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Status" 
                                            Binding="{Binding Status, Converter={StaticResource StatusToTextConverter}}"
                                            Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Background" Value="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="Path" 
                                            Binding="{Binding RelativePath}"
                                            Width="*"/>
                        
                        <DataGridTextColumn Header="Type" Width="60">
                            <DataGridTextColumn.Binding>
                                <MultiBinding Converter="{StaticResource ItemTypeConverter}">
                                    <Binding Path="LeftItem"/>
                                    <Binding Path="RightItem"/>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="Left Size" 
                                            Binding="{Binding LeftItem.Size, Converter={StaticResource FileSizeConverter}}"
                                            Width="80"/>
                        
                        <DataGridTextColumn Header="Right Size" 
                                            Binding="{Binding RightItem.Size, Converter={StaticResource FileSizeConverter}}"
                                            Width="80"/>
                        
                        <DataGridTextColumn Header="Error" 
                                            Binding="{Binding ErrorMessage}"
                                            Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="200" 
                             Height="16" 
                             IsIndeterminate="{Binding IsComparing}"
                             Visibility="{Binding IsComparing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Button styling -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush"
                     Color="#FFF9FAFB" />
    <SolidColorBrush x:Key="ButtonBorderBrush"
                     Color="#FFD1D5DB" />
    <SolidColorBrush x:Key="ButtonForegroundBrush"
                     Color="#FF1F2937" />
    <SolidColorBrush x:Key="ButtonHoverBrush"
                     Color="#FFEDF2FF" />
    <SolidColorBrush x:Key="ButtonPressedBrush"
                     Color="#FFCBD5F5" />
    <SolidColorBrush x:Key="ButtonDisabledBrush"
                     Color="#FFF3F4F6" />
    <SolidColorBrush x:Key="ButtonDisabledBorderBrush"
                     Color="#FFE5E7EB" />
    <SolidColorBrush x:Key="ButtonDisabledForegroundBrush"
                     Color="#FF9CA3AF" />
    <SolidColorBrush x:Key="ButtonDefaultBrush"
                     Color="#FF3066F6" />
    <SolidColorBrush x:Key="ButtonDefaultForegroundBrush"
                     Color="#FFFFFFFF" />

    <Style TargetType="Button">
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}" />
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="10,6" />
    <Setter Property="Margin" Value="4,2,4,2" />
        <Setter Property="MinWidth" Value="90" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="contentPresenter"
                                              Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              RecognizesAccessKey="True" />
                        </Border>
                        <Border x:Name="FocusVisual"
                                Margin="2"
                                BorderThickness="2"
                                CornerRadius="4"
                                BorderBrush="#803066F6"
                                Opacity="0" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource ButtonHoverBrush}" />
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF5B76F7" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource ButtonPressedBrush}" />
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF2850C5" />
                        </Trigger>
                        <Trigger Property="IsDefaulted" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource ButtonDefaultForegroundBrush}" />
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource ButtonDefaultBrush}" />
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF1F4CD8" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{DynamicResource ButtonDisabledForegroundBrush}" />
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource ButtonDisabledBrush}" />
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="{DynamicResource ButtonDisabledBorderBrush}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="FocusVisual" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="False">
                            <Setter TargetName="FocusVisual" Property="Opacity" Value="0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
